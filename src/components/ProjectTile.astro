---
const { title, url, description, demo, code } = Astro.props;
---

<div class="col-1 py-5 md:py-0">
  <div class="flex flex-col md:flex-row gap-5">
    <div class="flex w-full md:w-1/3">
      <img
        class="object-cover rounded-lg"
        src={url}
        alt="Twoslashes Project Image"
      />
    </div>
    <div class="flex flex-col w-full md:w-2/3">
      <div>
        <h1 class="text-2xl font-bold">{title}</h1>
      </div>
      <div class="flex items-center pt-3 gap-2 font-light">
        <a
          class="p-1 border border-neutral-500 hover:border-ts-600 hover:scale-125 text-neutral-500 rounded flex items-center justify-center text-sm"
          target="_blank"
          href={demo}
        >
          Demo
        </a>
        <a
          class="p-1 border border-neutral-500 hover:border-ts-600 hover:scale-125 text-neutral-500 rounded flex items-center justify-center text-sm"
          target="_blank"
          href={code}
        >
          Github
        </a>
      </div>
      <div class="mt-3">
        <p class="font-medium text-sm">
          {description}
        </p>
      </div>
    </div>
  </div>
</div>
